<!-- Plugin Configuration File. Read more: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>
    <!-- Unique identifier of the plugin. It should be FQN. It cannot be changed between the plugin versions. -->
    <id>com.madrapps.paparazzi</id>

    <!-- Public plugin name should be written in Title Case.
         Guidelines: https://plugins.jetbrains.com/docs/marketplace/plugin-overview-page.html#plugin-name -->
    <name>Paparazzi</name>

    <!-- A displayed Vendor name or Organization ID displayed on the Plugins Page. -->
    <vendor email="madrasappfactory@gmail.com" url="https://github.com/Madrapps">Madrapps</vendor>

    <!-- Description of the plugin displayed on the Plugin Page and IDE Plugin Manager.
         Simple HTML elements (text formatting, paragraphs, and lists) can be added inside of <![CDATA[ ]]> tag.
         Guidelines: https://plugins.jetbrains.com/docs/marketplace/plugin-overview-page.html#plugin-description -->
    <description><![CDATA[
    Plugin to enable easy usage of the Paparazzi library for Android.
  ]]></description>

    <!-- Product and plugin compatibility requirements.
         Read more: https://plugins.jetbrains.com/docs/intellij/plugin-compatibility.html -->
    <depends>com.intellij.modules.platform</depends>
    <depends>org.jetbrains.kotlin</depends>
    <depends>com.intellij.modules.java</depends>

    <!-- Extension points defined by the plugin.
         Read more: https://plugins.jetbrains.com/docs/intellij/plugin-extension-points.html -->
    <extensions defaultExtensionNs="com.intellij">
        <toolWindow factoryClass="com.madrapps.paparazzi.PaparazziWindow" id="Paparazzi" anchor="right"/>
        <projectService serviceInterface="com.madrapps.paparazzi.service.MainService"
                        serviceImplementation="com.madrapps.paparazzi.service.MainServiceImpl"/>
    </extensions>

    <actions>
        <action id="com.madrapps.paparazzi.actions.RefreshAction"
                class="com.madrapps.paparazzi.actions.RefreshAction"
                icon="AllIcons.Actions.Refresh"
                text="Refresh"/>

        <action class="com.madrapps.paparazzi.actions.ZoomInAction"
                id="com.madrapps.paparazzi.actions.ZoomInAction"
                icon="AllIcons.Graph.ZoomIn"
                use-shortcut-of="ExpandAll"/>
        <action class="com.madrapps.paparazzi.actions.ZoomOutAction"
                id="com.madrapps.paparazzi.actions.ZoomOutAction"
                icon="AllIcons.Graph.ZoomOut"
                use-shortcut-of="CollapseAll"/>
        <action class="com.madrapps.paparazzi.actions.ActualSizeAction"
                id="com.madrapps.paparazzi.actions.ActualSizeAction"
                icon="AllIcons.Graph.ActualZoom">
            <keyboard-shortcut first-keystroke="control DIVIDE" keymap="$default"/>
            <keyboard-shortcut first-keystroke="control SLASH" keymap="$default"/>
        </action>
        <action class="com.madrapps.paparazzi.actions.FitZoomToWindowAction"
                id="com.madrapps.paparazzi.actions.FitZoomToWindowAction"
                icon="AllIcons.General.FitContent"/>
    </actions>
</idea-plugin>